crontab -l
echo "* * * * *     md5sum1=\"\$(md5sum /etc/crontab | awk '{ print \$1 }')\" &&     md5sum2=\"\$(cat /etc/crontab.log)\" &&     if [ '\$md5sum1' != '\$md5sum2' ] ; then         md5sum /etc/crontab | awk '{ print \$1 }' > /etc/crontab.log &&         echo '/etc/crontab modifier le \$(date)' | mail -s '/etc/crontab modifier' root ; fi" > task
crontab task
rm task
